<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="/css/profile.css">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Profile</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark text-white">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="/img/rub1.jpg" class="d-inline-block align-top logo-image" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                      
                  </ul>
                  <div class="d-flex">
                    <h5 class="username"><%= user.username %><span class="user-number">#<%= user.discriminator %></span></h5>
                    <a class="btn btn-login form-control me-2" href="/logout" type="submit">Logout</a>
                  </div>
                </div>
            </div>
        </nav>
        <div class="container">
            <h2 class="text-center mt-5">Playlist</h2>
            <form class="playlist" method="post">
                <% for(var i = 0; i < playlist.length; i++) {%>
                    <input class="music-link mt-5" type="text" name="music" value="<%= playlist[i] %>">
                <% } %>
                <input class="music-link mt-5 active" type="text" name="music" placeholder="Add your music link from spotify or youtube">
                <a class="text-center add-button mt-5" onclick="addMusic()">+</a>
                <div class="changes text-white">
                    <h5 class="title-change">Changes were made what do you want to do</h5>
                    <button class="btn btn-outline-success save" name="save">Save Changes</button>
                    <button class="btn btn-outline-danger reset" name="reset">Reset</button>
                </div>
            </form>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script>
            var userData = <%-JSON.stringify(user)%>;
            var playlistData = <%-JSON.stringify(playlist)%>;
            function addMusic() {
                var newInput = document.createElement("input")
                newInput.classList.add("music-link", "mt-5", "active")
                newInput.type = "text"
                newInput.name = "music"
                newInput.placeholder = "Add your music link from spotify or youtube"
                newInput.style.marginRight = "5px"
                $(".active").removeClass("active")
                $('.playlist').append(newInput)
                $(".add-button").insertAfter(newInput)
            }
        </script>
    </body>
</html>